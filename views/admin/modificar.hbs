<div class="container" style="margin:100px auto">
	<div class="row">
		<div class="col-6 offset-3">
			<h4 class="text-center">Modificar cliente</h4>
			<form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
				<input type="hidden" value="{{cliente.id}}" name="id">
				<div class="form-group">
					<input type="text" value="{{cliente.nombre}}" class="form-control" placeholder="Nombre" name="nombre">
				</div>
				<div class="form-group py-2">
					<textarea type="text" class="form-control py-4" placeholder="Comentario" name="comentario">{{cliente.comentario}}</textarea>
				</div>
				<div class="form-group">
					<p>
						<label>Imagen: <input type="file" name="imagen" id="imagen"></label>
					</p>
					<p>
						<label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
						<input type="hidden" name="img_original" value="{{cliente.img_id}}">
					</p>
				</div>
				<button type="sumbit" class="btn btn-primary d-grid gap-2 col-6 mx-auto">Guardar</button>
			</form>
		</div>
	</div>
</div>
{{#if error}}
	<h5>{{message}}</h5>
{{/if}}