<div class="container" style="margin:100px auto">
	<div class="row">
		<div class="col-6 offset-3">
			<h4 class="text-center">Agregar cliente</h4>
			<form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Nombre" name="nombre">
				</div>
				<div class="form-group py-2">
					<textarea type="text" class="form-control py-4" placeholder="Comentario" name="comentario"></textarea>
				</div>
				<div class="form-group">
					<p>Imagen: <input type="file" name="imagen" class="form-control" id="imagen"></p>
				</div>
				<button type="sumbit" class="btn btn-primary d-grid gap-2 col-6 mx-auto">Guardar</button>
			</form>
		</div>
	</div>
</div>
{{#if error}}
	<h5>{{message}}</h5>
{{/if}}